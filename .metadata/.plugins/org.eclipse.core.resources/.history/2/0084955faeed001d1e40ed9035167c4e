package com.cg.java;
import java.util.Scanner;


public class SumOfNum {

    public static void main(String[] args) { 

        Scanner sc = new Scanner(System.in);
          System.out.print("Enter a number = ");
          int num = sc.nextInt(); 
        int  i = 1, sum = 0;

        do
        {
            sum += i;
            i++;
        }while(i <= num);

        System.out.println("Sum = " + sum);
    }
    
}


}
